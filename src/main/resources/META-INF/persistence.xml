<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="postgres" >
<!--        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>-->
        <class>com.example.shopoo.Model.UserLog</class>
        <class>com.example.shopoo.Model.Customer</class>
        <class>com.example.shopoo.Model.Seller</class>
        <class>com.example.shopoo.Model.Admin</class>
        <class>com.example.shopoo.Model.Product</class>
        <class>com.example.shopoo.Model.Cart</class>
        <class>com.example.shopoo.Model.Orders</class>
        <class>com.example.shopoo.Model.Payment</class>
        <class>com.example.shopoo.Model.Feedback</class>
        <properties>
<!--            <property name="hibernate.connection.url" value="jdbc:postgresql://localhost:5432/Shopoodb"/>-->
<!--            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>-->
<!--            <property name="hibernate.connection.username" value="postgres"/>-->
<!--            <property name="hibernate.connection.password" value="admin"/>-->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Shopoodb"/>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="admin"/>
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
        </properties>
    </persistence-unit>
</persistence>
